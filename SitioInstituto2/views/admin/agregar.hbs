<div class="container" style="margin: 100px auto;">
    <div class="row">
        <div class="col">
            <form action="/admin/novedades/agregar" method="post" enctype="multipart/form-data">
                <h2>Agregar Novedad</h2>
                <div class="form-group">
                    <label for="titulo">Título</label>
                    <input type="text" class="form-control" name="titulo">
                </div>
                <div class="form-group">
                <label for="subtitulo" class="form-label">Subtítulo</label>
                <textarea type="text" class="form-control"  name="subtitulo"></textarea>
                </div>
                <div class="form-group">
                    <label>Imagen<input type="file" class="form-control" name="imagen" id="imagen"></label>
                </div>
                <div class="form-group">
                <label for="body" class="form-label">Cuerpo</label>
                <textarea type="text" class="form-control" name="body"></textarea>
                </div>
        </div>
        <button type="submit" class="btn btn-primary" style="margin-top: 20px;">Guardar</button>
        </form>
        {{#if error}}
        <p>{{message}}</p>
        {{/if}}
    </div>
</div>
</div>