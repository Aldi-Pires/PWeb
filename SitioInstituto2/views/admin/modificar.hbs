<div class="container" style="margin: 100px auto;">
    <div class="row">
        <div class="col">
            <form action="/admin/novedades/modificar" method="post" enctype="multipart/form-data">
                <input type="hidden" value="{{novedad.id}}" name="id">
                <h2>Modificar Novedad</h2>
                <div class="form-group">
                    <label for="titulo">Título</label>
                    <input type="text" class="form-control" name="titulo" value="{{novedad.titulo}}">
                </div>
                <div class="form-group">
                    <label for="subtitulo" class="form-label">Subtítulo</label>
                    <textarea type="text" class="form-control" name="subtitulo">{{novedad.subtitulo}}</textarea>
                </div>
                <div class="form-group">

                    <label>Imagen<input type="file" class="form-control" name="imagen" id="imagen"></label>

                    <label> <input type="checkbox" name="img_delete" id="img_delete" value="1">¿Eliminar imagen
                        actual?</label>
                    <input type="hidden" name="img_original" value="{{novedad.img_id}}">
                </div>
                <div class="form-group">
                    <label for="body" class="form-label">Cuerpo</label>
                    <textarea type="text" class="form-control" name="body">{{novedad.body}}</textarea>
                </div>
        </div>
        <button type="submit" class="btn btn-primary" style="margin-top: 20px;">Modificar</button>
        </form>
        {{#if error}}
        <p>{{message}}</p>
        {{/if}}
    </div>

</div>
</div>