<div class="container" style="margin-top: 100px;">
    {{!-- fila 1 --}}
    <div class="row">
        <div class="col">
            <p style="float: right">
                <span>Hola {{persona}}</span>
                <a href="/admin/login/logout" class="btn btn-danger">Cerrar sesión <i
                        class="bi bi-box-arrow-right"></i></a>
            </p>
        </div>
    </div>
    {{!-- fin fila 1 --}}

    {{!-- inicio fila 2 --}}
    <div class="row">
        <div class="col-7" style="margin-top: -9px ;">
            <h2>Listado de Novedades</h2>
        </div>
        <div class="col-5 text-end">
            <a href="" class="btn btn-success"> <i class="bi bi-plus-lg"></i>Nuevo</a>
        </div>
    </div>
    {{!-- fin fila 2 --}}

    {{!-- inicio fila 3 --}}
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Título</th>
                        <th scope="col" class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody class="table-group-divider">
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td class="text-end"> <a href="" class="btn btn-secondary"> <i class="bi bi-pencil"></i></a>
                        <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary"> <i class="bi bi-trash"></i></a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    {{!-- fin fila 3 --}}
</div>